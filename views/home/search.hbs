<div class="container">
	<div class="row">
		<div class="col-md-offset-3 col-md-6" style="margin-top: 3%">
              <form method="post" action="/search">
              	 <div class="input-group input-group-lg">
              	 	<input type="text" name="search_input" class="form-control" placeholder="What are you searching?...">
              	 	<span class="input-group-btn">
              	 		<input type="submit"  class="btn btn-success" value="find Posts">
              	 	</span>
              	 </div>
              </form>
			</div>
          
           <div class="section  container" >
           	  {{#each content.hits}}
	
			 <div class="card mb-4"  style="margin-top: 6%">
             <div class="card-body">
              <h2 class="card-title">{{title}}</h2>
              <p class="card-text" id="testt">{{body}}</p>
              
              <a href="/single/{{ objectID }}" class="btn btn-primary">Read More &rarr;</a>
            </div>
            <div class="card-footer text-muted">
             {{GenerateTime date 'MMMM Do YYYY'}}
            </div>
          </div>
          {{/each}}
           </div>



	</div>
</div>