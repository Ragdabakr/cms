<div class="row">

        <!-- Blog Entries Column -->
        <div class="col-md-8">

     <br/>
     <br/>
   
       
       {{#if user}}
       <p><em><b><a href="/admin">Go to Admin panel</a></b></em></p>
       {{else}}
     <p><em><b><a href="/register">Please Register to can access Admin panel</a></b></em></p>
   {{/if}}
       

          <!-- Blog Post -->
          {{# each posts}}
          <div class="card mb-4">
            <img class="card-img-top" src="/uploads/{{file}}" alt="Card image cap">
            <div class="card-body">
              <h2 class="card-title">{{title}}</h2>
              <p class="card-text" id="test">{{body}}</p>
              
              <a href="/single/{{id}}" class="btn btn-primary">Read More &rarr;</a>
            </div>
            <div class="card-footer text-muted">
             {{GenerateTime date 'MMMM Do YYYY'}}
            </div>
          </div>
          {{/each}}

                        <!-- Pagination -->
        <ul class="pagination justify-content-center mb-4">

            {{#paginate current=current pages=pages}}{{/paginate}}

        </ul>


      </div>

          <!-- Sidebar Widgets Column -->

    {{> home/sidebar}}

  </div>

 


